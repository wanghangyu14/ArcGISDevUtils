<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/closeMeasure"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_close_deep_blue" />

    <TextView
        android:id="@+id/measureResult"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/measureUnit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="m"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/undo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/dismiss" />

    <ImageView
        android:id="@+id/addPoint"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:src="@drawable/plus_circle_fill" />

    <ImageView
        android:id="@+id/trashMeasure"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/trash_can" />

    <ImageView
        android:id="@+id/lengthAndArea"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/length_selected" />
</LinearLayout>