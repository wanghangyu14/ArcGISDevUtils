<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UtilsMapScale">
        <attr name="font_size" format="dimension" />
        <attr name="scale" format="integer" />
        <attr name="map_scale_text_color" format="color"/>
        <attr name="scale_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="UtilsMeasureToolbox">
        <attr name="mode" format="enum">
            <enum name="normal" value="0" />
            <enum name="precise" value="1" />
        </attr>
        <attr name="measure_spinner_position" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="measure_toolbox_icon_color" format="color"/>
        <attr name="measure_toolbox_text_color" format="color"/>
        <attr name="measure_toolbox_front_sight_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="UtilsMapController">
        <attr name="hasZoom" format="boolean" />
        <attr name="magnification" format="integer" />
        <attr name="map_controller_icon_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="UtilsBufferQueryToolbox">
        <attr name="buffer_spinner_position" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="buffer_query_toolbox_icon_color" format="color"/>
        <attr name="buffer_query_toolbox_text_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="UtilsPolygonQueryToolbox">
        <attr name="polygon_query_toolbox_icon_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="UtilsLayerController">
        <attr name="title"  format="string"/>
        <attr name="collapsable" format="boolean"/>
        <attr name="isCollapsed" format="boolean"/>
        <attr name="showTitle" format="boolean"/>
        <attr name="checkbox_drawable" format="reference"/>
        <attr name="seekbar_thumb_drawable" format="reference"/>
        <attr name="seekbar_progress_drawable" format="reference"/>
    </declare-styleable>
</resources>